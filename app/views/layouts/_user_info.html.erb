<div class='col-xs-3'>
<h2>User info</h2>
  <table class='table'>
    <tr><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %><tr>

    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>

    <tr>
	  <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>

   </table>
   <div class='row'>
      <%= link_to"",edit_user_path(user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit" %>
   </div>
<h2>New book</h2>
<% if book.errors.any? %>
  <%= book.errors.count %>
  <h1>errors prohibited this book from being saved:</h1>
  <div class="alert alert-warning">
  <ul>
    <% book.errors.full_messages.each do |message| %>
  	<li><%= message %></li>
  	<% end %>
  </ul>
  </div>
  <% end %>
<%= form_for(book) do |f| %>

<h4>Title</h4>
    <%= f.text_field :title %>

<h4>Opnion</h4>
    <%= f.text_field :body %>
    <%= f.submit "Create Book", class:"btn btn-primary"%>
<% end %>
</div>
